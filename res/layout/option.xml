<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sound_options"
    android:padding="10dp" >

    <Button
        android:id="@+id/back"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:onClick="back"
        android:text="              " />

    <Button
        android:id="@+id/play"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:onClick="play"
        android:text="              " />

    <ImageButton
        android:id="@+id/music"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/play"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:onClick="mute_music"
        android:src="@drawable/musicbutton" />

    <ImageButton
        android:id="@+id/sound"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/music"
        android:layout_below="@+id/music"
        android:onClick="mute_sound"
        android:src="@drawable/soundbutton" />

</RelativeLayout>